<?xml version="1.0" ?>
<odoo>
    <!-- Lots/Serial Numbers form view -->
    <record id="view_production_lot_form_fm_version_view" model="ir.ui.view">
        <field name="name">stock.production.lot.form</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form" />
        <field name="arch" type="xml">

            <field name="ref" position="before">
                <field name="batch_no" />
                <field name="qc_no" />
                <field name="manf" />
                <field name="originc" />
                <field name="prodDate" />
                <field name="expDate" />
                <field name="supplier_invoice_no" />
                <field name="priority" />
                <field name="barrel" />
            </field>
        </field>
    </record>

     <record model="ir.ui.view" id="quality_check_view_form_update">

            <field name="name">quality.check.form.view</field>
            <field name="model">quality.check</field>
            <field name="inherit_id" ref="quality_control.quality_check_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[1]" position="before">
                    <page string="Quality Tests" >
                        <field name="quality_tests">
                            <tree editable="bottom">
                                <field name="quality_test_type_id" />
                                <field name="quality_test_code" />
                                <field name="quality_test_name"/>
                                <field name="quality_test_desc"/>
                                <field name="result"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
                <field name="product_id" position="before">
                    <field name="name"/>
                </field>
                <field name="lot_id" position="after">
                    <field name="reanalysisDate"/>
                    <field name="remark"/>
                </field>
            </field>
        </record>
</odoo>
